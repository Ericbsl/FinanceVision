@model IEnumerable<FinanceVision.Application.ViewModels.EmpresaViewModel>
@{
    ViewData["Title"] = "Empresas";
}

<h2 class="mb-3">Lista de Empresas</h2>
<a asp-action="Create" class="btn btn-primary mb-3">+ Nova Empresa</a>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Razão Social</th>
            <th>Nome Fantasia</th>
            <th>CNPJ</th>
            <th>Inscrição Estadual</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NomeRazaoSocial</td>
                <td>@item.NomeFantasia</td>
                <td>@item.Cnpj</td>
                <td>@item.InscricaoEstadual</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" method="post" asp-route-id="@item.Id" class="d-inline"
                          onsubmit="return confirm('Tem certeza que deseja excluir esta empresa?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
