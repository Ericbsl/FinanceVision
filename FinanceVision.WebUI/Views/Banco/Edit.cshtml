@model FinanceVision.Application.ViewModels.BancoViewModel
@{
    ViewData["Title"] = "Editar Banco";
}

<h2>Editar Banco</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-4">
            <label asp-for="NomeBanco" class="form-label"></label>
            <input asp-for="NomeBanco" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="Agencia" class="form-label"></label>
            <input asp-for="Agencia" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="Conta" class="form-label"></label>
            <input asp-for="Conta" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="TipoConta" class="form-label"></label>
            <input asp-for="TipoConta" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="Titular" class="form-label"></label>
            <input asp-for="Titular" class="form-control" />
        </div>
    </div>

    <div class="mt-3">
        <label asp-for="CnpjCpfTitular" class="form-label"></label>
        <input asp-for="CnpjCpfTitular" class="form-control" />
    </div>

    <hr />
    <button type="submit" class="btn btn-success">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
