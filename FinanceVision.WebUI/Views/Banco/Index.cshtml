@model IEnumerable<FinanceVision.Application.ViewModels.BancoViewModel>
@{
    ViewData["Title"] = "Bancos";
}

<h2 class="mb-3">Lista de Bancos</h2>
<a asp-action="Create" class="btn btn-primary mb-3">+ Novo Banco</a>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Nome do Banco</th>
            <th>Agência</th>
            <th>Conta</th>
            <th>Tipo Conta</th>
            <th>Titular</th>
            <th>CNPJ/CPF</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NomeBanco</td>
                <td>@item.Agencia</td>
                <td>@item.Conta</td>
                <td>@item.TipoConta</td>
                <td>@item.Titular</td>
                <td>@item.CnpjCpfTitular</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" method="post" asp-route-id="@item.Id" class="d-inline"
                          onsubmit="return confirm('Tem certeza que deseja excluir este banco?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
