@model FinanceVision.Application.ViewModels.CategoriaFinanceiraViewModel
@{
    ViewData["Title"] = "Nova Categoria Financeira";
}

<h2>Nova Categoria Financeira</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-4">
            <label asp-for="NomeCategoria" class="form-label"></label>
            <input asp-for="NomeCategoria" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Tipo" class="form-label"></label>
            <select asp-for="Tipo" class="form-select">
                <option value="">Selecione...</option>
                <option value="RECEITA">Receita</option>
                <option value="DESPESA">Despesa</option>
            </select>
        </div>
        <div class="col-md-5">
            <label asp-for="Descricao" class="form-label"></label>
            <input asp-for="Descricao" class="form-control" />
        </div>
    </div>

    <hr />
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
