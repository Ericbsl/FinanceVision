@model IEnumerable<FinanceVision.Application.ViewModels.CategoriaFinanceiraViewModel>
@{
    ViewData["Title"] = "Categorias Financeiras";
}

<h2 class="mb-3">Lista de Categorias</h2>
<a asp-action="Create" class="btn btn-primary mb-3">+ Nova Categoria</a>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NomeCategoria</td>
                <td>@item.Tipo</td>
                <td>@item.Descricao</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" method="post" asp-route-id="@item.Id" class="d-inline"
                          onsubmit="return confirm('Tem certeza que deseja excluir esta categoria?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
