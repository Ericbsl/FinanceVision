@model IEnumerable<FinanceVision.Application.ViewModels.FormaPagamentoViewModel>
@{
    ViewData["Title"] = "Formas de Pagamento";
}

<h2 class="mb-3">Lista de Formas de Pagamento</h2>
<a asp-action="Create" class="btn btn-primary mb-3">+ Nova Forma de Pagamento</a>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Permite Parcelamento</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descricao</td>
                <td>@(item.PermiteParcelamento ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" method="post" asp-route-id="@item.Id" class="d-inline"
                          onsubmit="return confirm('Tem certeza que deseja excluir esta forma de pagamento?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
