@model FinanceVision.Application.ViewModels.FormaPagamentoViewModel
@{
    ViewData["Title"] = "Editar Forma de Pagamento";
}

<h2>Editar Forma de Pagamento</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6">
            <label asp-for="Descricao" class="form-label"></label>
            <input asp-for="Descricao" class="form-control" />
        </div>
        <div class="col-md-6 mt-4">
            <div class="form-check">
                <input asp-for="PermiteParcelamento" class="form-check-input" type="checkbox" />
                <label asp-for="PermiteParcelamento" class="form-check-label"></label>
            </div>
        </div>
    </div>

    <hr />
    <button type="submit" class="btn btn-success">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
